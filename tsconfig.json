{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "ESNext",
    "target": "esnext",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "scripthost",
      "es2015"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.svelte"
  ],
  "exclude": [
    "node_modules"
  ]
}
